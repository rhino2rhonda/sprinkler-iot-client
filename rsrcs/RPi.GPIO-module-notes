## Useful methods and attributes


# Import
import RPi.GPIO as pin


# Mandatory setup steps
 
# Set mode
pins.setmode(pins.BOARD)

# Setup a pin as input or output along with default state
pins.setup(pin_number, pins.IN, pins.PUD_DOWN)


# Writing and reading
pins.output(pin_number, pins.HIGH)
pins.input(pin_number)


# Cleanup
pins.cleanup()
